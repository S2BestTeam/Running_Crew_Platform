<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.running_back_s2.domain.inquiries.crew.CrewInquiryMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="crewInquiryId">
        insert into crew_inquiry_tb (crew_id, user_id, category, title, content, status)
        values (#{crewId}, #{userId}, #{category}, #{title}, #{content}, #{status})
    </insert>

    <update id="update">
        update
            crew_inquiry_tb
        set
            title = #{title},
            content = #{content},
            created_at = #{createdAt}
        where
            crew_inquiry_id = #{crewInquiryId}
    </update>

    <delete id="delete">
        delete
        from
            crew_inquiry_tb
        where
            crew_inquiry_id = #{crewInquiryId}
    </delete>

    <select id="findAll" resultType="com.korit.running_back_s2.domain.inquiries.crew.CrewInquiry">
        select
            *
        from
            crew_inquiry_tb
    </select>
</mapper>
