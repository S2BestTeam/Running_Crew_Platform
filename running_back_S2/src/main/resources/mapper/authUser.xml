<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.running_back_s2.domain.authUser.AuthUserMapper">

    <select id="findByUsername" resultType="com.korit.running_back_s2.domain.authUser.AuthUser">
        select
            *
        from
            auth_user_tb
        where
            email = #{email}
    </select>

    <select id="findById" resultType="com.korit.running_back_s2.domain.authUser.AuthUser">
        select
            *
        from
            auth_user_tb
        where
            auth_user_id = #{userId}
    </select>

    <insert id="insert">
        INSERT INTO auth_user_tb (provider_id, email, oauth_type, full_name, created_at )
        VALUES ( #{providerId}, #{email}, #{oauthType}, #{fullName}, NOW() );
    </insert>
</mapper>